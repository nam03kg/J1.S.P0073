package Model;

import java.util.Date;

/**
 * Represents an expense with ID, date, amount, and content.
 */
public class Expense {
    private int id;
    private Date date;
    private double amount;
    private String content;

    public Expense(int id, Date date, double amount, String content) {
        this.id = id;
        this.date = date;
        this.amount = amount;
        this.content = content;
    }

    public int getId() {
        return id;
    }

    public Date getDate() {
        return date;
    }

    public double getAmount() {
        return amount;
    }

    public String getContent() {
        return content;
    }
}
